{
  "name": "codedocs",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered code documentation tool",
  "workspaces": [
    "packages/core",
    "packages/cli",
    "packages/theme",
    "packages/vite-plugin",
    "packages/parsers/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=20.0"
  },
  "packageManager": "npm@10.0.0"
}
